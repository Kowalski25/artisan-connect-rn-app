{
  "expo": {
    "name": "artisan-connect-rn-app",
    "slug": "artisan-connect-rn-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "src/assets/icon.png",
    "userInterfaceStyle": "light",
    "plugins": [
      "expo-apple-authentication",
      "expo-font",
      [
        "expo-camera", 
        {
          "cameraPermission": "Allow Artisan Connect to access your camera",
          "microphonePermission": "Allow Artisan Connect to access your microphone",
          "recordAudioAndroid": true
        }
      ],
      [
        "expo-local-authentication",
        {
          "faceIDPermission": "Allow Artisan Connect to use Face ID?"
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow Artisan Connect to access your photos?"
        }
      ]
    ],
    "splash": {
      "image": "src/assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "usesAppleSignIn": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "src/assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      }
    },
    "web": {
      "favicon": "src/assets/favicon.png"
    }
  }
}
